@page
@model LoginModel

@{
    ViewData["Title"] = "Вход";
}

<!-- Passport-like themed login -->
<div class="passport-sheet">
    <div class="passport-inner">
        <!-- Left side: Portrait -->
        <div class="passport-left">
            <div class="portrait-frame">
                <div class="portrait-placeholder">
                    <span>PHOTO</span>

                    <!-- Stamp partly inside, partly outside -->
                    <div class="stamp-inside-wrap" aria-hidden="true">
                        <svg class="stamp" viewBox="0 0 240 240" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Decorative stamp">
                            <defs>
                                <filter id="inkGrain">
                                    <feTurbulence type="fractalNoise" baseFrequency="0.9" numOctaves="2" stitchTiles="stitch" result="noise" />
                                    <feColorMatrix type="saturate" values="0" result="mono" />
                                    <feComponentTransfer in="mono" result="grain">
                                        <feFuncA type="table" tableValues="0 0.6" />
                                    </feComponentTransfer>
                                    <feBlend in="SourceGraphic" in2="grain" mode="multiply" />
                                </filter>
                                <filter id="roughEdge" x="-20%" y="-20%" width="140%" height="140%">
                                    <feTurbulence baseFrequency="0.6" numOctaves="2" result="turb" />
                                    <feDisplacementMap in="SourceGraphic" in2="turb" scale="4" xChannelSelector="R" yChannelSelector="G" />
                                </filter>
                                <mask id="inkMask">
                                    <rect x="0" y="0" width="100%" height="100%" fill="white" />
                                    <g fill="black" opacity="0.06">
                                        <circle cx="60" cy="170" r="40" />
                                        <circle cx="180" cy="40" r="30" />
                                        <ellipse cx="140" cy="130" rx="36" ry="18" />
                                    </g>
                                </mask>
                            </defs>
                            <g transform="translate(0,0)">
                                <g filter="url(#roughEdge)">
                                    <circle cx="120" cy="120" r="92" fill="none" stroke="#0b5ed7" stroke-width="6" />
                                </g>
                                <circle cx="120" cy="120" r="64" fill="none" stroke="#0b5ed7" stroke-width="3" stroke-dasharray="6 5" opacity="0.92" />
                                <text x="120" y="110" font-size="18" text-anchor="middle" fill="#0b5ed7" font-family="Segoe UI, Arial" font-weight="800" letter-spacing="1.5">TRAVEL</text>
                                <text x="120" y="130" font-size="14" text-anchor="middle" fill="#0b5ed7" font-family="Segoe UI, Arial" font-weight="800" letter-spacing="1.2">MEMORIES</text>
                                <line x1="60" y1="120" x2="90" y2="120" stroke="#0b5ed7" stroke-width="2" opacity="0.85" />
                                <line x1="150" y1="120" x2="180" y2="120" stroke="#0b5ed7" stroke-width="2" opacity="0.85" />
                                <path d="M40 160 q40 -24 80 -10 q30 10 60 -8" fill="none" stroke="#0b5ed7" stroke-opacity="0.14" stroke-width="12" stroke-linecap="round" />
                                <g filter="url(#inkGrain)" opacity="0.98"></g>
                                <g mask="url(#inkMask)" opacity="0.18" fill="#0b5ed7">
                                    <circle cx="50" cy="170" r="12" />
                                    <circle cx="190" cy="40" r="8" />
                                    <ellipse cx="140" cy="130" rx="22" ry="10" />
                                </g>
                            </g>
                        </svg>
                    </div>
                </div>
                <div class="portrait-caption">Ваш портрет</div>
            </div>
        </div>

        <!-- Right side: Login form -->
        <div class="passport-right">
            <div class="doc-header">
                <div class="doc-title">PASSPORT-STYLE</div>
                <div class="doc-sub">TRAVEL MEMORY PAGE (thematic)</div>
            </div>

            <form id="account" method="post" class="passport-form">
                <div asp-validation-summary="ModelOnly" class="validation text-danger" role="alert"></div>

                <!-- Email and Password only -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control passport-input" autocomplete="username" placeholder="email@example.com" />
                    <label asp-for="Input.Email">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control passport-input" autocomplete="current-password" placeholder="Парола" />
                    <label asp-for="Input.Password">Парола</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">Запомни ме</label>
                </div>

                <div class="d-grid mb-2">
                    <button id="login-submit" type="submit" class="btn passport-btn">Вход</button>
                </div>

                <div class="small-links">
                    <a asp-page="./ForgotPassword">Забравена парола?</a> ·
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .passport-sheet {
        max-width: 920px;
        margin: 40px auto;
        padding: 28px;
        background: linear-gradient(180deg, #f7f3ea 0%, #efe6d6 100%);
        border: 1px solid rgba(30,20,10,0.12);
        box-shadow: 0 12px 36px rgba(0,0,0,0.25);
        font-family: "Segoe UI", Tahoma, Arial, sans-serif;
        color: #2e2a25;
        border-radius: 8px;
    }

    .passport-inner {
        display: flex;
        gap: 22px;
    }

    .passport-left {
        width: 38%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .portrait-frame {
        width: 100%;
        text-align: center;
    }

    .portrait-placeholder {
        position: relative;
        width: 100%;
        height: 240px;
        background: linear-gradient(180deg, #eef3f5 0%, #e6eded 100%);
        border: 3px solid rgba(20,20,20,0.06);
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6b6b6b;
        font-weight: 700;
        letter-spacing: 2px;
        box-shadow: inset 0 2px 6px rgba(0,0,0,0.04);
        overflow: visible;
    }

        .portrait-placeholder::before {
            content: "";
            position: absolute;
            inset: 0;
            background-image: linear-gradient(rgba(0,0,0,0.015) 1px, transparent 1px), linear-gradient(90deg, rgba(0,0,0,0.01) 1px, transparent 1px);
            background-size: 100% 6px, 6px 100%;
            mix-blend-mode: multiply;
            pointer-events: none;
        }

    .portrait-caption {
        margin-top: 6px;
        font-size: 0.85rem;
        color: #4b4238;
    }

    .stamp-inside-wrap {
        position: absolute;
        bottom: -80px;
        right: -80px;
        width: 160px;
        height: 160px;
        transform: rotate(-12deg);
        pointer-events: none;
        z-index: 5;
    }

    .stamp {
        width: 160px;
        height: 160px;
        opacity: 0.95;
        mix-blend-mode: multiply;
        filter: drop-shadow(0 1px 0 rgba(0,0,0,0.03));
    }

    .passport-right {
        width: 62%;
    }

    .doc-header {
        display: flex;
        flex-direction: column;
        gap: 6px;
        margin-bottom: 14px;
    }

    .doc-title {
        font-weight: 700;
        font-size: 1.05rem;
        letter-spacing: 1px;
        color: #3a2f27;
    }

    .doc-sub {
        font-size: 0.82rem;
        color: #645548;
    }

    .passport-form .form-floating {
        position: relative;
    }

    .passport-input {
        background: linear-gradient(180deg, #faf7f1 0%, #f3ebe0 100%);
        border: 1px solid rgba(90,70,55,0.12);
        color: #30261b;
        padding: 1rem .75rem;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.4);
        border-radius: 4px;
    }

    .passport-form .form-floating label {
        color: #5d4a3b;
    }

    .form-check {
        margin-bottom: 1rem;
    }

    .passport-btn {
        background: #0d6efd;
        color: white;
        border: none;
        padding: 12px;
        font-weight: 700;
        border-radius: 6px;
        box-shadow: 0 4px 10px rgba(13,110,253,0.18);
        cursor: pointer;
    }

        .passport-btn:hover {
            transform: translateY(-1px);
        }

    .small-links {
        margin-top: 8px;
        font-size: 0.86rem;
        color: #4f4239;
    }

        .small-links a {
            color: #103a8b;
            text-decoration: none;
        }

            .small-links a:hover {
                text-decoration: underline;
            }

    @@media (max-width: 880px) {
        .passport-inner {
            flex-direction: column;
        }

        .passport-left,
        .passport-right {
            width: 100%;
        }

        .portrait-placeholder {
            height: 200px;
        }

        .stamp-inside-wrap {
            bottom: -60px;
            right: -60px;
            width: 140px;
            height: 140px;
        }

        .stamp {
            width: 140px;
            height: 140px;
        }
    }
</style>
