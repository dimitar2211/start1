@model start1.Models.Ticket

@{
    ViewData["Title"] = "Create Ticket";
}

<style>
    body {
        background: #ececec;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .ticket-wrapper {
        max-width: 1000px;
        margin: 50px auto;
        padding: 0 20px;
    }

    .page-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 30px;
        color: #222;
        font-weight: 700;
        letter-spacing: 1.2px;
    }

    form {
        user-select: none;
    }

    .real-ticket {
        display: flex;
        background: linear-gradient(145deg, #fafafa, #e6e6e6);
        border-radius: 15px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.15), inset 0 0 8px rgba(255,255,255,0.7);
        overflow: hidden;
        cursor: default;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1.5px solid #bbb;
        position: relative;
        font-weight: 600;
    }

        .real-ticket:hover {
            transform: translateY(-6px);
            box-shadow: 0 18px 30px rgba(0,0,0,0.3), inset 0 0 10px rgba(255,255,255,0.9);
            border-color: #4caf50;
        }

    .ticket-left, .ticket-right {
        padding: 25px 30px;
        flex: 1;
        position: relative;
        z-index: 10;
    }

    .ticket-left {
        background: #e0f2f1;
        border-right: 1.5px dashed #999;
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
    }

        .ticket-left label {
            display: flex;
            flex-direction: column;
            margin-bottom: 18px;
            font-weight: 700;
            font-size: 1.1rem;
            color: #00796b;
        }

            .ticket-left label strong {
                margin-bottom: 6px;
                color: #00796b;
                text-shadow: 0 1px 1px #a0d4cf;
                letter-spacing: 1.2px;
            }

    input.fake-input {
        background: transparent;
        border: none;
        border-bottom: 1.5px dashed #004d40;
        color: #004d40;
        font-weight: 600;
        font-size: 1.1rem;
        padding: 6px 4px;
        transition: border-color 0.3s ease;
        max-width: 100%;
    }

        input.fake-input::placeholder {
            color: #00796b88;
        }

        input.fake-input:focus {
            outline: none;
            border-color: #4caf50;
            background: transparent;
        }

    input.small-input {
        max-width: 150px;
        font-size: 1.1rem;
        text-align: left;
    }

    /* Стрелка между "От" и "До" */
    .ticket-left .from-to-wrapper {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 18px;
    }

        .ticket-left .from-to-wrapper label {
            flex: 1;
            margin-bottom: 0;
        }

    .ticket-left .arrow {
        font-size: 2.8rem; /* По-голям размер */
        color: #00796b;
        user-select: none;
        font-weight: 700; /* По-дебел шрифт */
        text-shadow: 0 1px 1px #a0d4cf;
        line-height: 1;
        /* Ако искаш, може да увеличиш разстоянието надолу и нагоре */
        display: flex;
        align-items: center;
    }

    .ticket-center {
        width: 30px;
        background: repeating-linear-gradient( to bottom, transparent, transparent 8px, #999 8px, #999 10px );
        position: relative;
    }

        .ticket-center::before,
        .ticket-center::after {
            content: "";
            position: absolute;
            width: 30px;
            height: 30px;
            background: #ececec;
            border-radius: 50%;
            left: 50%;
            transform: translateX(-50%);
            box-shadow: inset 3px 3px 5px rgba(255,255,255,0.9), inset -3px -3px 5px rgba(0,0,0,0.15);
            z-index: 11;
        }

        .ticket-center::before {
            top: -15px;
        }

        .ticket-center::after {
            bottom: -15px;
        }

    .ticket-right {
        background: #fff;
        box-shadow: inset 0 4px 10px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        border-left: 1.5px dashed #999;
    }

    .barcode {
        width: 100%;
        height: 60px;
        background: repeating-linear-gradient( to right, #000, #000 3px, #fff 3px, #fff 6px, #000 6px, #000 9px, #fff 9px, #fff 12px, #000 12px, #000 15px, #fff 15px, #fff 18px );
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
        margin-bottom: 18px;
    }

    .actions {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding-bottom: 10px;
    }

    .btn-create {
        background: #4caf50;
        color: white;
        padding: 14px 36px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 700;
        font-size: 1.1rem;
        box-shadow: 0 6px 12px rgba(76,175,80,0.6);
        transition: background 0.3s ease, transform 0.2s ease;
        border: none;
        cursor: pointer;
        user-select: none;
    }

        .btn-create:hover {
            background: #388e3c;
            transform: translateY(-3px);
            box-shadow: 0 12px 20px rgba(56,142,60,0.8);
        }
</style>

<div class="ticket-wrapper">
    <h1 class="page-title">Нов билет</h1>

    <form method="post" asp-action="Create">
        <div class="real-ticket">
            <div class="ticket-left">
                <div class="from-to-wrapper">
                    <label>
                        <strong>От:</strong>
                        <input asp-for="From" class="fake-input" placeholder="Град на тръгване" required />
                        <span asp-validation-for="From" class="text-danger"></span>
                    </label>
                    <div class="arrow">→</div>
                    <label>
                        <strong>До:</strong>
                        <input asp-for="To" class="fake-input" placeholder="Дестинация" required />
                        <span asp-validation-for="To" class="text-danger"></span>
                    </label>
                </div>
                <label>
                    <strong>Дата и час:</strong>
                    <input asp-for="DepartureTime" type="datetime-local" class="fake-input small-input" required />
                    <span asp-validation-for="DepartureTime" class="text-danger"></span>
                </label>
                <label>
                    <strong>Пътници:</strong>
                    <input asp-for="NumberOfPassengers" class="fake-input small-input" min="1" value="1" required />
                    <span asp-validation-for="NumberOfPassengers" class="text-danger"></span>
                </label>
            </div>

            <div class="ticket-center"></div>

            <div class="ticket-right">
                <div class="barcode"></div>
                <div class="actions">
                    <button type="submit" class="btn-create">Създай билет</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}